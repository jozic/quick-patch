<idea-plugin version="2">
    <name>Quick Patch</name>
    <description>Save and restore your patches at one click</description>
    <version>0.0.2</version>
    <vendor email="jozic@ua.fm"
            logo="/ua/com/jozic/quickpatch/icons/logo.png"
            url="https://github.com/jozic/quick-patch">Ievgen Platonov
    </vendor>
    <category>VCS Integration</category>
    <idea-version since-build="10372"/>
    <resource-bundle>ua.com.jozic.quickpatch.QuickPatchMessageBundle</resource-bundle>

    <change-notes>
        <ul>
            <li>0.0.1 initial version - save patches to the specified directory</li>
        </ul>
    </change-notes>

    <application-components>
        <component>
            <implementation-class>
                ua.com.jozic.quickpatch.components.QuickPatchSettingsComponent
            </implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>
                ua.com.jozic.quickpatch.components.QuickPatcherComponent
            </implementation-class>
        </component>
    </project-components>

    <actions>
        <action id="SavePatches" class="ua.com.jozic.quickpatch.actions.SavePatchesAction"
                icon="/ua/com/jozic/quickpatch/icons/make.patch.png">
            <add-to-group group-id="ChangesViewToolbar" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl P"/>
        </action>
        <action id="RestorePatches" class="ua.com.jozic.quickpatch.actions.RestorePatchesAction"
                icon="/ua/com/jozic/quickpatch/icons/restore.patch.png">
            <add-to-group group-id="ChangesViewToolbar" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
</idea-plugin>